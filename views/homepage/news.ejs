<%- include('partials/header') %>
<section style="position: relative;" data-aos="fade-down">
  <img src="/homepage/images/computer laptop.jpeg" alt="Tim PST" style="
    width: 100%;
    max-height: 450px;
    object-fit: cover;
    border-radius: 10px;
    display: block;
  ">

  <!-- Overlay semi-transparan -->
  <div style="
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);  /* lapisan gelap */
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
  ">
    <p style="
      color: white;
      font-size: 1.8rem;
      font-weight: bold;
      max-width: 800px;
      text-align: center;
      padding: 0 20px;
    "  data-aos="zoom-in">
      Discover Insights and Connect with Your Market
    </p>
  </div>
</section>




<main style="padding: 140px 10% 60px; font-family: Arial, sans-serif; background-color: #f9f9f9;">
  

  <!-- Search & Filter -->
  <div style="display: flex; justify-content: flex-end; align-items: center; gap: 10px; margin: 30px 0;" data-aos="zoom-in-down">
    <h2 style="font-size: 1.8rem; font-weight: bold; color: #00357a; margin-right: 400px;" data-aos="zoom-in-down">Berita Terbaru</h2>
    <input type="text" placeholder="Search..." style="padding: 10px; width: 230px; border: 1px solid #ccc; border-radius: 6px;">
    <select style="padding: 10px; border: 1px solid #ccc; border-radius: 6px;">
      <option>Semua kategori</option>
      <% categories.forEach(function(category) { %>
        <option><%= category %></option>
      <% }) %>
    </select>    
  </div>

  <!-- Cards Grid -->
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px;"data-aos="zoom-in-down">
    <% news.forEach(function(item){ %>
      <div style="border: 1px solid #ddd; border-radius: 12px; overflow: hidden; background-color: #fff; box-shadow: 0 2px 6px rgba(0,0,0,0.05); transition: transform 0.2s;">
        <img src="/dashboard/storage/files/news/<%= item.image %>" alt="News Image" style="width: 100%; height: 160px; object-fit: cover;">
        <div style="padding: 15px;">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
            <span style="background: #007bff; color: #fff; padding: 4px 10px; border-radius: 6px; font-size: 11px; text-transform: capitalize;">
              <%= item.category %>
            </span>
            <span style="font-size: 11px; color: #777;"><%= item.tanggal %></span>
          </div>
          <span style="font-size: 11px; color: #777;"><%= item.createdAt %></span>
          <h4 style="margin: 10px 0; font-size: 16px; color: #00357a;"><%= item.title %></h4>
          <p style="font-size: 14px; color: #555; margin-bottom: 10px;"><%- item.description %></p>
          <a href="/news/read/<%= item.slug %>" style="color: #007bff;">Baca selengkapnya &rarr;</a>
        </div>
      </div>
    <% }); %>
  </div>

  <!-- Pagination -->
  <div style="text-align: center; margin: 50px 0;" data-aos="zoom-in-down">
    <button style="padding: 8px 12px; margin: 0 3px; border: 1px solid #007bff; background: #fff; color: #007bff; border-radius: 6px;">
      &laquo;
    </button>

    <button style="padding: 8px 12px; margin: 0 3px; border: none; background: #007bff; color: #fff; border-radius: 6px;">
      1
    </button>
    <button style="padding: 8px 12px; margin: 0 3px; border: 1px solid #007bff; background: #fff; color: #007bff; border-radius: 6px;">
      2
    </button>
    <button style="padding: 8px 12px; margin: 0 3px; border: 1px solid #007bff; background: #fff; color: #007bff; border-radius: 6px;">
      3
    </button>

    <button style="padding: 8px 12px; margin: 0 3px; border: 1px solid #007bff; background: #fff; color: #007bff; border-radius: 6px;">
      &raquo;
    </button>
  </div>
</main>
