          <div class="swiper-slide"><img src="/homepage/images/team.png" alt="Team Member 1"></div>
          <div class="swiper-slide"><img src="/homepage/images/team1.png" alt="Team Member 2"></div>
          <div class="swiper-slide"><img src="/homepage/images/team2.png" alt="Team Member 3"></div>
          <div class="swiper-slide"><img src="/homepage/images/team3.png" alt="Team Member 4"></div>
        </div>
      </div>
    </div>
  </div>
</section>



