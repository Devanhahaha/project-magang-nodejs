              <i class="fa fa-share-alt"></i>
              <i class="fa fa-eye"
                data-title="<%= portofolio.title %>"
                data-description="<%- portofolio.description %>"
                data-image="/dashboard/storage/files/portofolio/<%= portofolio.image %>"
                data-tech="<%= portofolio.techstack %>"
