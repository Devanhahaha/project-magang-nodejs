<% var title="Detail Client" ; %>

<div class="page-content">
  <div class="container text-center mt-4">
    <% if (clients.logo) { %>
    <img
      src="/dashboard/storage/files/clients/<%= clients.logo %>"
      class="img-fluid rounded shadow mb-4"
      style="max-height: 300px"
      alt="<%= clients.name %>"
    />
    <% } else { %>
    <p class="text-muted">Foto tidak tersedia.</p>
    <% } %>
  </div>

  <div class="content-body pt-3">
    <div class="container">
      <div class="card shadow p-4 mb-4">
        <h4 class="mb-2 text-center">Nama Client:</h4>
        <p class="text-center text-warning"><%= clients.name %></p>
      </div>

      <div class="card shadow p-3 mb-3">
        <h6 class="mb-1 text-muted text-center">Project:</h6>
        <% if (clients.projects && clients.projects.length > 0) { %> <%
        clients.projects.forEach(project => { %>
        <p class="mb-0 text-dark"><%- project.name %></p>
        <% }) %> <% } else { %>
        <p class="text-muted">Tidak ada project</p>
        <% } %>
      </div>

      <div class="text-center mb-3">
        <a href="/dashboard" class="btn btn-secondary me-2">‚Üê Kembali</a>
      </div>
    </div>
  </div>
</div>
