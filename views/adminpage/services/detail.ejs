<% var title="Detail Services" ; %>

<div class="page-content">
  <div class="container text-center mt-4">
    <% if (service.banner) { %>
      <img src="/storage/files/services/<%= service.banner %>" class="img-fluid rounded shadow mb-4" style="max-height: 300px;" alt="<%= service.title %>">
    <% } else { %>
      <p class="text-muted">Foto tidak tersedia.</p>
    <% } %>
  </div>

  <div class="content-body pt-3">
    <div class="container">
      <div class="card shadow p-4 mb-4">
        <h4 class="mb-2 text-center"><%= service.title %></h4>
        <p class="text-center text-warning"><%= service.subtitle %></p>
      </div>

      <div class="card shadow p-3 mb-3">
        <h6 class="mb-1 text-muted text-center">Description</h6>
        <p class="mb-0 text-dark"><%- service.description %></p>
      </div>

      <div class="text-center mb-3">
        <a href="/services" class="btn btn-secondary me-2">‚Üê Kembali</a>
      </div>
    </div>
  </div>
</div>
