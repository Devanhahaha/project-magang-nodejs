<% var title="Home" ; %>

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row g-6">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center flex-wrap mb-6 gap-2">
                            <div class="me-1">
                                <h5 class="mb-0">Home Content</h5>
                                <p class="mb-0">Ramah <span class="fw-medium text-heading">Technology</span></p>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-label-danger">Home</span>
                                <i class="ti ti-share ti-lg mx-4"></i>
                                <i class="ti ti-bookmarks ti-lg"></i>
                            </div>
                        </div>

                        <div class="card academy-content shadow-none border">
                            <div class="p-2">
                                <% if (homes) { %>
                                    <div class="cursor-pointer">
                                        <img src="/<%= homes.banner %>" alt="image" class="img-fluid rounded shadow"
                                            data-bs-toggle="offcanvas" data-bs-target="#editHome<%= homes.id %>">
                                    </div>

                                    <!-- Offcanvas for edit -->
                                    <div class="offcanvas offcanvas-end" tabindex="-1" id="editHome<%= homes.id %>"
                                        aria-labelledby="offcanvasLabel">
                                        <div class="offcanvas-header border-bottom">
                                            <h5 class="offcanvas-title" id="offcanvasLabel">Update Home Content</h5>
                                            <button type="button" class="btn-close text-reset"
                                                data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                        </div>
                                        <div class="offcanvas-body flex-grow-1">
                                            <form action="/home/update/<%= homes.id %>" method="POST"
                                                enctype="multipart/form-data">
                                                <div class="mb-3">
                                                    <label class="form-label" for="banner">Banner</label>
                                                    <input type="file" id="banner" name="banner" class="form-control"
                                                        required />
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label" for="title">Title</label>
                                                    <input type="text" id="title" name="title" class="form-control"
                                                        placeholder="Enter title"
                                                        value="<%= old.title || homes.title %>" required />
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label" for="subtitle">Subtitle</label>
                                                    <textarea type="text" id="subtitle" name="subtitle"
                                                        class="form-control" 
                                                        required><%= homes.subtitle %></textarea>
                                                </div>

                                                <div class="mt-4">
                                                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        data-bs-dismiss="offcanvas">
                                                        Cancel
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>

                            <% if (homes) { %>
                                <div class="card-body pt-4 text-center">
                                    <h5>About your company</h5>
                                    <hr class="my-6" />
                                    <h5>Title</h5>
                                    <p class="mb-6">
                                        <%= homes.title %>
                                    </p>
                                    <hr class="my-6" />
                                    <h5>Subtitle</h5>
                                    <p class="mb-6">
                                        <%- homes.subtitle %>
                                    </p>
                                </div>
                                <% } else { %>
                                    <div class="text-center p-4">No home content found.</div>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SweetAlert2 -->
    <!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (success && success.length > 0) { %>
  <script>
    Swal.fire({
      icon: 'success',
      title: 'Berhasil!',
      text: '<%= success[0] %>', // Ambil pesan pertama saja
      showConfirmButton: false,
      timer: 2000
    });
  </script>
<% } %>
    
<% if (error && error.length > 0) { %>
  <script>
    Swal.fire({
      icon: 'error',
      title: 'Gagal!',
      text: '<%= error[0] %>', // Ambil pesan pertama saja
      showConfirmButton: false,
      timer: 2000
    });
  </script>
<% } %>
    
                    <% if (errors && errors.length> 0 && old && old.id) { %>
                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                const offcanvasEl = document.getElementById("editHome<%= old.id %>");
                                if (offcanvasEl) {
                                    const offcanvas = new bootstrap.Offcanvas(offcanvasEl);
                                    offcanvas.show();
                                }

                                Swal.fire({
                                    icon: 'error',
                                    title: 'Validasi Gagal!',
                                    html: `<%= errors.join('<br>') %>`,
                                    confirmButtonText: 'OK'
                                });
                            });
                        </script>
                        <% } %>
                        <script src="https://cdn.ckeditor.com/4.22.1/standard-all/ckeditor.js"></script>
                        <script>
                            CKEDITOR.replace('subtitle')
                        </script>